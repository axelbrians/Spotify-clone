<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp"
    android:paddingVertical="7dp"
    tools:background="@color/black_background">

    <ImageView
        android:id="@+id/vh_artist_popular_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/lee_hi_seoulite"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vh_artist_popular_img"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vh_artist_popular_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEOULITE"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vh_artist_popular_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016"
            android:textSize="13sp"
            android:textColor="@color/grey_deactivated"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>