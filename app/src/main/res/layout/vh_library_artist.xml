<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    tools:background="@color/black_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/vh_library_artist_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@color/grey_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vh_library_artist_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_add_24"
        android:visibility="invisible"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/vh_library_artist_img"
        app:layout_constraintEnd_toEndOf="@+id/vh_library_artist_img"
        app:layout_constraintStart_toStartOf="@+id/vh_library_artist_img"
        app:layout_constraintTop_toTopOf="@+id/vh_library_artist_img" />

    <TextView
        android:id="@+id/vh_library_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="TAEYEON"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vh_library_artist_img"
        app:layout_constraintStart_toEndOf="@+id/vh_library_artist_img"
        app:layout_constraintTop_toTopOf="@+id/vh_library_artist_img" />

</androidx.constraintlayout.widget.ConstraintLayout>