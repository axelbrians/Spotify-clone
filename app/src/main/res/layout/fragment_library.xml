<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".fragment_btm.LibraryFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_library_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_background"
        app:tabIndicatorColor="@color/green_active"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabPaddingBottom="0dp"
        app:tabPaddingTop="12dp"
        app:layout_constraintTop_toTopOf="parent">
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_library_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="13dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_library_tablayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>