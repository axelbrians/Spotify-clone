<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:background="@color/black_background">

    <TextView
        android:id="@+id/vh_library_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommneded"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/vh_library_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on the bla bla bla"
        android:textColor="@color/grey_deactivated"
        android:textSize="12sp"/>

</LinearLayout>